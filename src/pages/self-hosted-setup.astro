---
// 导入基础布局组件
import BaseLayout from '@layouts/Base.astro';
// 导入导航栏组件
import NavBar from '@components/scafold/Nav.astro';
// 导入页脚组件
import Footer from '@components/scafold/Footer.astro';
// 导入图标组件
import Icon from '@components/molecules/Icon.svelte';

// ==================== 卡片数据配置 ====================
// 定义自托管设置的选项卡片数据
const cardData = [
  {
    // 卡片 1：使用 Docker 部署
    title: 'Deploy with Docker',  // 卡片标题
    description: 'Just one command, and you\'ll have your own Web Check instance running on your server in minutes.',  // 卡片描述
    command: 'docker run -p 3000:3000 lissy93/web-check',  // Docker 命令
  },
  {
    // 卡片 2：一键部署
    title: '1-Click Deploy',  // 卡片标题
    description: 'Don\'t have a server? Not a problem! Deploy Web Check with one click on Vercel or Netlify.',  // 卡片描述
    buttons: [  // 按钮组
      {
        name: 'Vercel',  // 按钮名称
        image: '/assets/images/vercel.svg',  // 按钮图标
        link: 'https://vercel.com/new/clone?repository-url=https%3A%2F%2Fgithub.'  // Vercel 部署链接（URL 编码）
        +'com%2Fxray-web%2Fweb-check-free&project-name=web-check-free&repository'
        + '-name=web-check-free&demo-title=Web%20Check&demo-description=Try%20ou'
        + 't%20the%20live%20demo&demo-url=https%3A%2F%2Fweb-check.xyz%2F&demo-ima'
        + 'ge=https%3A%2F%2Fi.ibb.co%2Fr0jXN6s%2Fweb-check.png'
      },
      {
        name: 'Netlify',  // 按钮名称
        image: '/assets/images/netlify.svg',  // 按钮图标
        link: 'https://app.netlify.com/start/deploy?repository='  // Netlify 部署链接
        + 'https://github.com/xray-web/web-check-free',
      }
    ]
  },
  {
    // 卡片 3：从源代码构建
    title: 'Build from Source',  // 卡片标题
    description: 'Want to customize Web Check? Clone the repository and deploy it on your server.',  // 卡片描述
    buttons: [  // 按钮组
      {
        name: 'GitHub',  // 按钮名称
        image: '/assets/images/github.svg',  // 按钮图标
        link: '',  // 链接（空字符串，待填充）
      }
    ]
  }
];
---

<!-- 渲染基础布局组件 -->
<!-- title：页面标题 -->
<!-- description：页面描述（用于 SEO） -->
<BaseLayout
  title="Self-Hosted Setup | Web Check"
  description="Get started with running Web Check locally or on your own server."
>
  <!-- 页面容器 -->
  <div class="web-check-page">
    <!-- 导航栏 -->
    <NavBar />
    <!-- 主内容区域 -->
    <main>
      <!-- 页面标题 -->
      <h1>Self-Hosted Setup</h1>
      <!-- 页面介绍 -->
      <p>
        Get your own free instance of Web Check, running locally or on your server.
      </p>
    
      <!-- 选项卡片容器 -->
      <div class="option-cards">

        <!-- 使用 map 遍历 cardData 数组，动态渲染卡片 -->
        { cardData.map((card, cardIndex) => (
          <div class="card">
            <!-- 选项标签（显示选项编号） -->
            <span class="option">Option #{cardIndex + 1}</span>
            <!-- 卡片标题 -->
            <h3>{card.title}</h3>
            <!-- 卡片描述 -->
            <p>{card.description}</p>
            
            <!-- 如果卡片有按钮组，则渲染按钮 -->
            { card.buttons && (
              <div class="buttons">
                { card.buttons.map(button => (
                  <a href={button.link}>
                    <!-- 按钮图标 -->
                    <img src={button.image} />
                    <!-- 按钮名称 -->
                    {button.name}
                  </a>
                ))}
              </div>
            )}
            
            <!-- 如果卡片有命令，则渲染命令框 -->
            { card.command && (
              <div class="shaddow docker-command">
                <!-- 命令代码 -->
                <code>{card.command}</code>
                <!-- 复制按钮（使用图标组件） -->
                <button><Icon name="copy" size={0.8} /></button>
              </div>
            )}
          </div>
        ))}
    </div>
    </main>
    <!-- 页脚 -->
    <Footer />
  </div>
</BaseLayout>


<!-- ==================== 样式定义 ==================== -->
<style lang="scss">
  // 导入全局样式
  @import '@styles/global.scss';
  
  // 页面容器样式
  .web-check-page {
    padding-top: 2rem;  // 顶部内边距
    margin: 0 auto;  // 水平居中
    min-height: 100vh;  // 最小高度为视口高度的 100%
    width: 100vw;  // 宽度为视口宽度的 100%
    display: flex;  // 使用 Flexbox 布局
    flex-direction: column;  // 垂直方向排列
    justify-content: space-between;  // 内容在垂直方向上均匀分布
    background-image: url('/assets/images/background-dots.svg');  // 背景图片（点阵图案）
    
    // 移动端设备
    @include mobile-down {
      padding: 0.5rem;  // 减小内边距
    }
    
    // 主内容区域样式
    main {
      width: 80vw;  // 宽度为视口宽度的 80%
      margin: 0 auto;  // 水平居中
      min-height: 100%;  // 最小高度为 100%
      flex-grow: 1;  // 占据剩余空间
      padding: 5rem 0 2rem 0;  // 内边距（上、右、下、左）
      max-width: 1200px;  // 最大宽度
      
      // 移动端设备
      @include mobile-down {
        padding: 1rem 0;  // 减小内边距
      }
    }
    
    // 选项卡片容器样式
    .option-cards {
      display: grid;  // 使用 Grid 布局
      gap: 1rem;  // 卡片之间的间距
      grid-template-columns: repeat(2, 1fr);  // 两列布局，每列等宽
      margin-top: 2.5rem;  // 顶部外边距
      
      // 第一个卡片跨越两列
      .card:first-child {
        grid-column: span 2;
      }
      
      // 平板横屏及以下设备
      @include tablet-landscape-down {
        grid-template-columns: 1fr;  // 单列布局
        .card:first-child {
          grid-column: span 1;  // 第一个卡片不跨越列
        }
      }
      
      // 卡片样式
      .card {
        padding: 0.5rem 1rem;  // 内边距
        background-color: var(--background);  // 背景色
        color: var(--text-color);  // 文字颜色
        border-radius: 4px;  // 圆角
        border: 1px solid var(--primary-transparent);  // 边框
        
        // 选项标签样式
        .option {
          color: var(--primary);  // 文字颜色
          font-size: 0.8rem;  // 字体大小
        }
        
        h3 {
          margin-top: 1rem;  // 标题顶部外边距
        }
        
        p {
          line-height: 1.3;  // 行高
        }
        
        // Docker 命令框样式
        .docker-command {
          display: flex;  // 使用 Flexbox 布局
          margin: 1rem 0;  // 上下外边距
          position: relative;  // 相对定位
          
          button {
            background: var(--background);  // 背景色
            border: none;  // 无边框
            color: var(--text-color);  // 文字颜色
            position: absolute;  // 绝对定位
            right: 0.5rem;  // 右侧位置
            top: 0.5rem;  // 顶部位置
            z-index: 2;  // 层级
            opacity: 0.5;  // 透明度
          }
          
          code {
            background-color: var(--background);  // 背景色
            padding: 0.5rem 2rem 0.5rem 0.5rem;  // 内边距（上、右、下、左）
            display: block;  // 块级元素
            font-family: PTMono, source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;  // 等宽字体
            z-index: 2;  // 层级
            border-radius: 3px;  // 圆角
            width: fit-content;  // 宽度适应内容
          }
        }

        // 按钮组样式
        .buttons {
          display: flex;  // 使用 Flexbox 布局
          gap: 1rem;  // 按钮之间的间距
          flex-wrap: wrap;  // 允许换行
          margin-bottom: 0.5rem;  // 底部外边距
          
          a {
            padding: 0.5rem 1rem;  // 内边距
            background-color: var(--primary);  // 背景色
            color: var(--background);  // 文字颜色
            border-radius: 4px;  // 圆角
            text-decoration: none;  // 移除下划线
            transition: all 0.3s ease;  // 过渡效果
            display: flex;  // 使用 Flexbox 布局
            align-items: center;  // 垂直居中
            gap: 0.5rem;  // 图标和文字之间的间距
            
            // 鼠标悬停状态
            &:hover {
              background-color: var(--text-color);  // 背景色变化
              color: var(--background);  // 文字颜色
            }
            
            img {
              width: 1rem;  // 图片宽度
              filter: grayscale(100%);  // 图片灰度滤镜
            }
          }
        }
      }
      
    }
  }
  
  // 阴影效果样式（用于 Docker 命令框）
  .shaddow {
    // 定义渐变阴影的颜色变量
    --c0: #f4ffc7;
    --c1: #d6fb41;
    --c2: #c2f300;
    --c3: #a8d200;
    --c4: #5e7500;

    // 定义渐变阴影
    --gradient-shadow: linear-gradient(
      45deg,
      var(--c0),
      var(--c1),
      var(--c2),
      var(--c3),
      var(--c4),
      var(--c0),
      var(--c1),
      var(--c2),
      var(--c3),
      var(--c4),
      var(--c3),
      var(--c2),
      var(--c1)
    );
    
    position: relative;  // 相对定位
    z-index: 1;  // 层级
    transition: all 0.3s ease;  // 过渡效果
    width: fit-content;  // 宽度适应内容
    
    // 伪元素：用于创建渐变阴影
    &:before,
    &:after {
      content: "";  // 空内容
      position: absolute;  // 绝对定位
      top: -1px;  // 顶部位置
      left: -1px;  // 左侧位置
      background: var(--gradient-shadow);  // 渐变背景
      background-size: 400%;  // 背景大小（用于动画）
      width: calc(100% + 2px);  // 宽度（包含边框）
      height: calc(100% + 2px);  // 高度（包含边框）
      z-index: -1;  // 层级（在内容下方）
      animation: animate 10s linear infinite;  // 动画
      transition: all 0.3s ease;  // 过渡效果
    }

    // 伪元素 before 的样式
    &:before {
      opacity: 0.1;  // 透明度
    }

    // 伪元素 after 的样式（模糊效果）
    &:after {
      filter: blur(3px);  // 模糊滤镜
      opacity: 0.3;  // 透明度
    }

    // 鼠标悬停状态
    &:hover {
      &:before,
      &:after {
        animation: animate 40s linear infinite;  // 动画速度变慢
      }
      &:after {
        opacity: 0.7;  // 透明度增加
      }
    }

    // 动画关键帧
    @keyframes animate {
      0% {
        background-position: 0 0;  // 背景位置（起始）
      }
      50% {
        background-position: 120% 0;  // 背景位置（中间）
      }
      100% {
        background-position: 0 0;  // 背景位置（结束）
      }
    }
  }
</style>
