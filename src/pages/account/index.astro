---
// 导入基础布局组件
import BaseLayout from '@layouts/Base.astro';
// 导入导航栏组件
import NavBar from '@components/scafold/Nav.astro';
// 导入页脚组件
import Footer from '@components/scafold/Footer.astro';
// 导入图标组件
import Icon from '@components/molecules/Icon.svelte';
---

<!-- 渲染基础布局组件 -->
<!-- title：页面标题 -->
<!-- description：页面描述（用于 SEO） -->
<BaseLayout
  title="Account | Web Check"
  description="Login or sign up for a free account on Web Check, to manage API access, save reports, enable website change notificiations and more!"
>
  <!-- 页面容器 -->
  <div class="web-check-page">
    <!-- 导航栏 -->
    <NavBar />
    <!-- 主内容区域 -->
    <main>
      <!-- 注释掉的登录表单（功能尚未实现） -->
      <!-- <h1>Login</h1>
      <p>
        Your Web Check account is your gateway to managing API access, as well as additional functionality
      </p> -->

      <!-- 开发中提示框 -->
      <div class="under-development">
        <h4>Account management is currently under development.</h4>
        <p>
          Once complete, you will be able to login to your account to manage API
          access, save reports, enable website change notificiations and more!
        </p>
      </div>

    </main>
    <!-- 页脚 -->
    <Footer />
  </div>
</BaseLayout>


<!-- ==================== 样式定义 ==================== -->
<style lang="scss">
  // 导入全局样式
  @import '@styles/global.scss';
  
  // 页面容器样式
  .web-check-page {
    padding-top: 2rem;  // 顶部内边距
    margin: 0 auto;  // 水平居中
    min-height: 100vh;  // 最小高度为视口高度的 100%
    width: 100vw;  // 宽度为视口宽度的 100%
    display: flex;  // 使用 Flexbox 布局
    flex-direction: column;  // 垂直方向排列
    justify-content: space-between;  // 内容在垂直方向上均匀分布
    background-image: url('/assets/images/background-dots.svg');  // 背景图片（点阵图案）
    
    // 移动端设备（宽度小于移动端断点）
    @include mobile-down {
      padding: 0.5rem;  // 减小内边距
    }
    
    // 开发中提示框样式
    .under-development {
      border: 2px solid var(--warning);  // 边框为警告色
      background: #ffff0012;  // 背景色为淡黄色（半透明）
      padding: 1rem;  // 内边距
      margin: 2rem auto;  // 上下外边距 2rem，水平居中
      border-radius: 4px;  // 圆角
      
      h4 {
        margin-bottom: 1rem;  // 标题下方外边距
      }
      
      p {
        font-size: 1.1rem;  // 字体大小
        line-height: 1.5;  // 行高
      }
    }
    
    // 主内容区域样式
    main {
      width: 80vw;  // 宽度为视口宽度的 80%
      margin: 0 auto;  // 水平居中
      min-height: 100%;  // 最小高度为 100%
      flex-grow: 1;  // 占据剩余空间
      padding: 5rem 0 2rem 0;  // 内边距（上、右、下、左）
      max-width: 1200px;  // 最大宽度
      
      // 移动端设备
      @include mobile-down {
        padding: 1rem 0;  // 减小内边距
      }
    }
  }
</style>
