---
// Astro 组件的前置元数据（Frontmatter）部分
// 使用 --- 分隔符，这部分代码在构建时执行

// 导入 Icon 组件：用于显示图标
// @components/molecules/Icon.svelte: 图标组件的路径
// 注意：这是一个 Svelte 组件，Astro 支持混合使用不同框架的组件
import Icon from '@components/molecules/Icon.svelte';

// 定义组件的 Props（属性）接口
// TypeScript 接口，用于类型检查和自动补全
interface Props {
  // supportedChecks 属性：支持的检查类型列表
  // 这是一个字符串数组，每个字符串代表一种检查类型
  supportedChecks: string[];
}

// 从 Astro.props 中解构 supportedChecks 属性
// Astro.props 是 Astro 提供的内置对象，包含组件的所有属性
const { supportedChecks } = Astro.props;
---

<!-- 功能特性列表 -->
<!-- class="features": 自定义类名，用于样式控制 -->
<ul class="features">
  <!-- 使用 map 方法遍历 supportedChecks 数组，为每个检查项创建一个列表项 -->
  {supportedChecks.map((check) => (
    <!-- 列表项：显示单个检查类型 -->
    <li>
      <!-- 图标组件：显示对勾图标，表示该检查功能 -->
      <!-- name="check": 图标名称为 "check"（对勾） -->
      <Icon name="check" />
      <!-- 检查类型名称 -->
      {check}
    </li>
  ))}
  <!-- 最后一个列表项：显示"更多"链接 -->
  <li>
    <!-- 图标组件：显示加号图标，表示可以查看更多 -->
    <!-- name="plus": 图标名称为 "plus"（加号） -->
    <Icon name="plus" />
    <!-- 链接：跳转到关于页面的功能部分 -->
    <a href="/about#features">更多</a>
  </li>
</ul>

<!-- 样式部分：使用 SCSS 语法 -->
<!-- lang="scss": 指定样式语言为 SCSS -->
<style lang="scss">
// 功能列表样式
.features {
  columns: 5;  /* 列数：5 列，使用 CSS 多列布局 */
  column-width: 150px;  /* 列宽：150 像素，每列的最小宽度 */
  list-style: none;  /* 列表样式：无（去除默认的项目符号） */
  padding: 0;  /* 内边距：0（去除默认内边距） */
  
  // 列表项样式
  li {
    font-size: 1.2rem;  /* 字体大小：1.2rem（约 19.2 像素） */
    line-height: 1.25;  /* 行高：1.25 倍字体大小 */
    margin: 0.5rem 0;  /* 外边距：上下 0.5rem，左右 0 */
    display: flex;  /* 显示：flexbox 布局，使图标和文字水平排列 */
    gap: 0.5rem;  /* 间距：0.5rem（约 8 像素），图标和文字之间的间距 */
    
    // 全局 SVG 样式
    // :global() 选择器用于选择组件外部的元素（如 Svelte 组件渲染的 SVG）
    :global(svg) {
      color: var(--primary);  /* SVG 颜色：使用 CSS 变量 --primary（主色调） */
    }
  }
}
</style>
