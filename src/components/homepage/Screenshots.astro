    {screenshots.slice(20).map((src, idx) => (
      <img src={src} class="screenshot" alt={`Screenshot ${idx + 20}`} />
    ))}
  </div>
</div>

<style lang="scss">
  // 导入全局样式文件
  @import '@styles/global.scss';

  // 截图容器样式
  .container {
    display: flex;              // 使用 Flexbox 布局
    height: 95vh;               // 高度为视口高度的 95%
    overflow: hidden;           // 隐藏溢出内容
    width: 33vw;                // 宽度为视口宽度的 33%
    justify-content: flex-end;  // 内容靠右对齐
    gap: 1.5rem;                // 列间距为 1.5rem
    z-index: 2;                 // 层级为 2，确保在其他元素之上
    
    // 在桌面及以下设备上隐藏
    @include desktop-down {
      display: none;
    }
  }

  // 列样式
  .column {
    flex: 1;                    // 每列占据相等空间
    display: flex;              // 使用 Flexbox 布局
    flex-direction: column;     // 垂直排列
    align-items: center;       // 水平居中对齐
    justify-content: flex-start; // 内容从顶部开始
    
    // 滚动动画：24 秒完成一次，线性速度，无限循环
    animation: scroll 24s linear infinite;
    
    // 第二列使用不同的动画速度（16 秒）
    &:nth-child(2) {
      animation: scroll 16s linear infinite;
    }
    
    // 鼠标悬停时暂停动画
    &:hover {
      animation-play-state: paused;
    }
  }

  // 截图图片样式
  .screenshot {
    width: 100%;                 // 宽度为 100%
    margin-bottom: 1.5rem;       // 下边距为 1.5rem
    border-radius: 4px;          // 圆角为 4px
    
    // 图片滤镜效果
    filter: contrast(120%) grayscale(50%) hue-rotate(-20deg);
    // contrast(120%)：对比度增加 20%
    // grayscale(50%)：灰度 50%
    // hue-rotate(-20deg)：色相旋转 -20 度
    
    // 裁剪路径：从边缘向内裁剪 0.5rem
    clip-path: inset(0.5rem);
    
    // 缩放效果：放大 1.1 倍
    transform: scale(1.1);
    
    // 过渡效果：0.3 秒缓入缓出
    transition: transform 0.3s ease-in-out;
  }

  // 滚动动画关键帧
  @keyframes scroll {
    0% {
      transform: translateY(0);      // 初始位置：不移动
    }
    100% {
      transform: translateY(-100%);   // 结束位置：向上移动 100%
    }
  }
</style>


